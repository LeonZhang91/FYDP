<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:orientation="vertical" 
  	android:background="#090202">  
	
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#787474"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:onClick="macroOption"
        android:text="@string/macroOption" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#787474"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:onClick="mouseOption"
        android:text="@string/mouseOption" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#787474"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:onClick="controllerOption"
        android:text="@string/controllerOption" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#787474"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:onClick="numpadOption"
        android:text="@string/numpadOption" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#787474"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:onClick="multiMediaOption"
        android:text="@string/multiMediaOption" />
        
</LinearLayout>
